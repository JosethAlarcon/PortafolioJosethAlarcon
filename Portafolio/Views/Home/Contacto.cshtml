
@{
	ViewData["Title"] = "Contacto";
}

<h1 class="m-3">Formulario de Contacto</h1>

<form asp-action="Contacto" asp-controller="Home">
	<div class="mb-3 m-3">
		<label for="nombre" class="form-label">Nombre</label>
		<input type="text" class="form-control" id="nombre" name="nombre" placeholder="Pedro Perez" />
	</div>

	<div class="mb-3 m-3">
		<label for="email" class="form-label">Email</label>
		<input type="text" class="form-control" id="email" name="email" placeholder="nombre@ejemplo.com"/>
	</div>
	<div class="mb-3 m-3"> 
		<label for="mensaje" class="form-label">Mensaje</label>
		<textarea class="form-control" id="mensaje" name="mensaje" rows="3"></textarea>
	</div>
	<button type="submit" class="btn btn-primary m-3">Enviar</button>

</form>
